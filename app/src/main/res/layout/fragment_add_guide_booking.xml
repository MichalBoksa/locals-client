<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/grey2">
    >

    <ImageView
        android:id="@+id/closeCreateLocalsBooking"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/cancel_icon" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="32dp"
        android:text="Make a guide booking"
android:textColor="@color/green_2"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/closeCreateLocalsBooking" />


    <TextView
        android:id="@+id/textView5"
        android:layout_width="324dp"
        android:layout_height="52dp"

        android:layout_marginStart="32dp"
        android:layout_marginTop="8dp"
        android:textColor="@color/white"
        android:layout_marginEnd="32dp"
        android:text="Send message to our guide what would you like to see, visit or what are you interested in"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <EditText
        android:id="@+id/messageCreateLocalsBookingET"
        android:layout_width="243dp"
        android:layout_height="100dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:padding="4dp"
        android:inputType="textCapSentences|textMultiLine"
        android:maxLines ="5"
        android:maxLength ="2000"
        android:scrollHorizontally="false"
        android:hint="Message"
        android:background="@drawable/rounded_rectangle"
        android:textColor="@color/black"
        android:textAlignment="textStart"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <Button
        android:id="@+id/CreateLocalsBookingFragmentBTN"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="44dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/button"
        android:text="make a booking"
        android:textColor="@color/green_2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/hourCreateLocalsBookingFragmentTV"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/dateCreateLocalsBookingFragmentTV"
        android:layout_width="120dp"
        android:layout_height="35dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/rectangle_background"
        android:gravity="center"
        android:text="Pick a date"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/startDateCreateLocalsBookingFragment" />

    <TextView
        android:id="@+id/startDateCreateLocalsBookingFragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="88dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="Date"
        android:textSize="14dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/messageCreateLocalsBookingET" />

    <TextView
        android:id="@+id/hourCreateLocalsBookingFragmentTV"
        android:layout_width="120dp"
        android:layout_height="35dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="44dp"
        android:background="@drawable/rectangle_background"
        android:gravity="center"
        android:textColor="@color/black"
        android:text="Pick an hour"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/HourCreateLocalsBookingFragment" />

    <TextView
        android:id="@+id/HourCreateLocalsBookingFragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="84dp"
        android:gravity="center"
        android:text="Hour"
        android:textSize="14dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/messageCreateLocalsBookingET" />
</androidx.constraintlayout.widget.ConstraintLayout>